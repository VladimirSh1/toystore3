@model IEnumerable<Toystore3.Models.Toy>

@{
    ViewBag.Title = "Список игрушек";
}

@{
    ViewData["MainView"] = "Index";
}


<h2>Список игрушек</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p>
    @Html.ActionLink("Постраничный вид", "PageIndex")
</p>

<p>
    @Html.ActionLink("Список с фильтрацией", "FilterIndex")
</p>

<p>
    @Html.ActionLink("Validation training FirstToy", "FirstToy")
</p>

<p>
    @Html.ActionLink("Validation training", "Create", "Toys")
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) руб.
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
                @Html.DisplayFor(modelItem => item.Employee.Patronymic)
                @Html.DisplayFor(modelItem => item.Employee.Surname)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
